<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.menu.TournamentSelect">
   <children>
      <Label text="Select a tournament">
         <font>
            <Font size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin></Label>
      <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="300.0" spacing="10.0">
         <children>
            <RadioButton fx:id="leagueRB" mnemonicParsing="false" text="League Tournament">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </RadioButton>
            <Label text="Each league has an individual tournament">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
            </Label>
            <RadioButton fx:id="madnessRB" mnemonicParsing="false" text="Matchup Madness">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </RadioButton>
            <Label text="Every team in one tournament">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
            </Label>
            <RadioButton fx:id="worldcupRB" mnemonicParsing="false" text="World Cup">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </RadioButton>
            <Label text="Fighters play for their nation of origin">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#select" text="Select">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="errorLabel" text="Choose a tournament to continue." textFill="RED" visible="false">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
