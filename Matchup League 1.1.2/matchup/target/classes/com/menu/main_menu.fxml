<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.menu.MainMenu">
   <children>
      <Label alignment="BOTTOM_CENTER" text="Matchup League" textAlignment="CENTER" textFill="#5367fd">
         <font>
            <Font name="Agency FB" size="70.0" />
         </font></Label>
      <Button mnemonicParsing="false" onAction="#newSeason" prefWidth="250.0" text="New Season" textFill="#5367fd">
         <font>
            <Font name="Agency FB" size="36.0" />
         </font>
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#newTournament" prefWidth="250.0" text="New Tournament" textFill="#5367fd">
         <font>
            <Font name="Agency FB" size="36.0" />
         </font>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Button>
      <CheckBox fx:id="debugCheckBox" mnemonicParsing="false" text="Debug mode">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </CheckBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
