<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="bg-main" stylesheets="@../../css/colors.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.menu.MainMenu">
   <children>
      <Label alignment="BOTTOM_CENTER" style="-fx-text-fill: -white;" styleClass="label-main" text="Matchup League" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Agency FB" size="70.0" />
         </font></Label>
      <Button mnemonicParsing="false" onAction="#newSeason" prefWidth="300.0" styleClass="button-main" text="New Season" textFill="#5367fd">
         <font>
            <Font size="36.0" />
         </font>
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#newTournament" prefWidth="300.0" style="-fx-background-color: -white;" styleClass="button-main" text="New Tournament" textFill="#5367fd">
         <font>
            <Font name="Agency FB" size="36.0" />
         </font>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Button>
      <CheckBox fx:id="debugCheckBox" mnemonicParsing="false" styleClass="label-main" text="Debug mode" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </CheckBox>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="versionLabel" style="-fx-text-fill: -white;" text="1.2.0 Development" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
